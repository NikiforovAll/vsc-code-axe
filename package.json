{
  "name": "code-cutter",
  "displayName": "Code Cutter",
  "description": "Code Cutter allows you to cut, copy and paste methods",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-cutter.expandMethod",
        "title": "Code Cutter: Expand Method"
      },
      {
        "command": "code-cutter.copyMethod",
        "title": "Code Cutter: Copy Method"
      },
      {
        "command": "code-cutter.cutMethod",
        "title": "Code Cutter: Cut Method"
      }
    ],
    "keybindings": [
      {
        "command": "code-cutter.expandMethod",
        "key": "ctrl+m ctrl+e",
        "mac": "cmd+m cmd+e"
      },
      {
        "command": "code-cutter.copyMethod",
        "key": "ctrl+m ctrl+c",
        "mac": "cmd+m cmd+c"
      },
      {
        "command": "code-cutter.cutMethod",
        "key": "ctrl+m ctrl+x",
        "mac": "cmd+m cmd+x"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "esbuild": "^0.23.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
